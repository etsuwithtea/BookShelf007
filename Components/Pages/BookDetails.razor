@page "/books/details/{id:int}"
@using BookShelf007.Models
@using BookShelf007.Services
@attribute [Authorize]
@inject IBookService BookService
@inject NavigationManager NavigationManager
@rendermode InteractiveServer

<div class="container mt-4">
    <button class="btn btn-link text-decoration-none text-muted mb-4 p-0" @onclick="GoBack">
        <i class="bi bi-arrow-left"></i> Back to Collection
    </button>

    @if (book == null)
    {
        <div class="text-center">
            <div class="spinner-border text-primary" role="status"></div>
            <p>Loading book details...</p>
        </div>
    }
    else
    {
        <div class="row g-5">
            <div class="col-md-5 col-lg-4">
                <div class="sticky-top" style="top: 2rem;">
                    <img src="@(string.IsNullOrEmpty(book.ImageUrl) ? "/images/Books/default.png" : book.ImageUrl)" 
                         class="img-fluid rounded-4 shadow-lg mb-4 w-100" 
                         alt="@book.Title" 
                         style="max-height: 500px; object-fit: cover;">
                </div>
            </div>
            <div class="col-md-7 col-lg-8">
                <div class="d-flex justify-content-between align-items-start mb-3">
                    <div>
                        <h1 class="display-5 fw-bold text-dark mb-2">@book.Title</h1>
                        <p class="h4 text-primary fw-light">by @book.Author</p>
                    </div>
                    <div class="d-flex gap-2">
                        <button class="btn @(book.IsFavorite ? "btn-danger" : "btn-outline-danger") rounded-pill" @onclick="ToggleFavorite">
                            <i class="bi @(book.IsFavorite ? "bi-heart-fill" : "bi-heart")"></i>
                        </button>
                        <button class="btn btn-outline-warning rounded-pill" @onclick="EditBook">
                            <i class="bi bi-pencil"></i> Edit
                        </button>
                    </div>
                </div>

                <div class="border-top border-bottom py-4 my-4">
                    <div class="row text-center text-md-start">
                        <div class="col-6 col-md-3 mb-3 mb-md-0">
                            <small class="text-muted d-block text-uppercase fw-bold" style="letter-spacing: 1px;">Published</small>
                            <span class="h6">@book.PublishedDate.ToString("MMMM dd, yyyy")</span>
                        </div>
                    </div>
                </div>

                <div class="description-section">
                    <h5 class="fw-bold mb-3">Summary</h5>
                    <p class="text-muted lh-lg" style="font-size: 1.1rem;">
                        @(string.IsNullOrEmpty(book.Description) ? "No summary available for this book." : book.Description)
                    </p>
                </div>
            </div>
        </div>
    }
</div>

@code {
    [Parameter] public int Id { get; set; }
    // test Comment testComment
    private Book? book;
    protected override async Task OnInitializedAsync() => book = await BookService.GetBookByIdAsync(Id);
    private void GoBack() => NavigationManager.NavigateTo("/books");
    private void EditBook() => NavigationManager.NavigateTo($"/books/edit/{Id}");    private async Task ToggleFavorite()
    {
        if (book != null)
        {
            await BookService.ToggleFavoriteAsync(book.Id);
            book = await BookService.GetBookByIdAsync(book.Id);
        }
    }}
