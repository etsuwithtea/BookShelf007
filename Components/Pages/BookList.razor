@page "/books"
@using BookShelf007.Models
@using BookShelf007.Services
@using Microsoft.AspNetCore.WebUtilities
@using System.Linq
@attribute [Authorize]
@inject IBookService BookService
@inject NavigationManager NavigationManager
@rendermode InteractiveServer

<PageTitle>Bookshelf</PageTitle>

<div class="container mt-2 mt-md-4 position-relative">
    <div class="d-flex flex-column flex-lg-row justify-content-between align-items-lg-center mb-3 mb-md-4 gap-3">
        <h1 class="mb-0">My Book Collection</h1>
        <div class="d-flex flex-row align-items-center gap-2 flex-grow-1 justify-content-lg-end">
            <div class="input-group" style="max-width: 250px;">
                <span class="input-group-text bg-white border-end-0"><i class="bi bi-search"></i></span>
                <input type="text" class="form-control border-start-0" placeholder="Search..." 
                       @bind="searchTerm" @bind:event="oninput" @onkeyup="HandleSearch" />
            </div>
            <select class="form-select w-auto" @onchange="OnSortChanged">
                <option value="title-asc">Title (A-Z)</option>
                <option value="title-desc">Title (Z-A)</option>
                <option value="date-newest">Date (Newest)</option>
                <option value="date-oldest">Date (Oldest)</option>
            </select>
            <button class="btn @(showFavoritesOnly ? "btn-danger" : "btn-outline-danger")" @onclick="ToggleFavoritesFilter" title="Show Favorites Only">
                <i class="bi @(showFavoritesOnly ? "bi-heart-fill" : "bi-heart")"></i>
            </button>
            <button class="btn btn-primary text-nowrap" @onclick="AddNewBook">
                <i class="bi bi-plus-lg"></i> <span class="d-none d-sm-inline">Add New Book</span><span class="d-inline d-sm-none">Add</span>
            </button>
        </div>
    </div>

    @if (showToast)
    {
        <div class="toast-container position-fixed bottom-0 end-0 p-3">
            <div class="toast show align-items-center text-white bg-success border-0" role="alert" aria-live="assertive" aria-atomic="true">
                <div class="d-flex">
                    <div class="toast-body">
                        Book saved successfully!
                    </div>
                    <button type="button" class="btn-close btn-close-white me-2 m-auto" @onclick="() => showToast = false" aria-label="Close"></button>
                </div>
            </div>
        </div>
    }

    @if (books == null)
    {
        <p><em>Loading...</em></p>
    }
    else if (!books.Any())
    {
        <div class="alert alert-info">No books found. Start by adding one!</div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-4 g-4">
            @foreach (var book in books)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm book-card position-relative">
                        <button class="btn btn-light btn-sm rounded-circle shadow-sm position-absolute top-0 end-0 m-2" 
                                style="z-index: 10; width: 36px; height: 36px; display: flex; align-items: center; justify-content: center;" 
                                @onclick="() => ToggleFavorite(book.Id)" @onclick:stopPropagation="true">
                            <i class="bi @(book.IsFavorite ? "bi-heart-fill text-danger" : "bi-heart text-muted") fs-5"></i>
                        </button>
                        <div @onclick="() => ViewBook(book.Id)" style="cursor: pointer;">
                            <img src="@(string.IsNullOrEmpty(book.ImageUrl) ? "/images/Books/default.png" : book.ImageUrl)" 
                                    class="card-img-top" alt="@book.Title">
                            <div class="card-body">
                                <h5 class="card-title-prominent fs-4">@book.Title</h5>
                                <p class="card-text text-muted mb-2" style="font-size: 0.9rem;">
                                    <i class="bi bi-person-fill text-primary"></i> @book.Author
                                </p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <span class="badge rounded-pill bg-light text-dark border">
                                        <i class="bi bi-calendar3"></i> @book.PublishedDate.Year
                                    </span>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer bg-white border-0 pb-3 d-flex justify-content-center gap-2">
                            <button class="btn btn-sm btn-dark" title="View" @onclick="() => ViewBook(book.Id)">
                                <i class="bi bi-eye"></i> <span class="d-none d-md-inline">View</span>
                            </button>
                            <button class="btn btn-sm btn-outline-warning" title="Edit" @onclick="() => EditBook(book.Id)">
                                <i class="bi bi-pencil"></i> <span class="d-none d-md-inline">Edit</span>
                            </button>
                            <button class="btn btn-sm btn-outline-danger" title="Delete" @onclick="() => DeleteBook(book.Id)">
                                <i class="bi bi-trash"></i> <span class="d-none d-md-inline">Delete</span>
                            </button>
                        </div>
                    </div>
                </div>
            }
        </div>

        @if (totalPages > 1)
        {
            <nav aria-label="Page navigation" class="mt-5">
                <ul class="pagination justify-content-center">
                    <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                        <button class="page-link" @onclick="() => ChangePage(currentPage - 1)">Previous</button>
                    </li>
                    @for (int i = 1; i <= totalPages; i++)
                    {
                        var pageNum = i;
                        <li class="page-item @(currentPage == pageNum ? "active" : "")">
                            <button class="page-link" @onclick="() => ChangePage(pageNum)">@pageNum</button>
                        </li>
                    }
                    <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                        <button class="page-link" @onclick="() => ChangePage(currentPage + 1)">Next</button>
                    </li>
                </ul>
            </nav>
        }
    }
</div>

@code {
    [Inject] private IJSRuntime JSRuntime { get; set; } = default!;
    private List<Book>? books;
    private bool showToast = false;
    private string currentSort = "title-asc";
    private string searchTerm = "";
    private bool showFavoritesOnly = false;
    private int currentPage = 1;
    private int pageSize = 8;
    private int totalPages = 1;

    protected override async Task OnInitializedAsync()
    {
        await LoadBooks();
        CheckForToast();
    }

    private void CheckForToast()
    {
        var uri = NavigationManager.ToAbsoluteUri(NavigationManager.Uri);
        if (Microsoft.AspNetCore.WebUtilities.QueryHelpers.ParseQuery(uri.Query).TryGetValue("saved", out var value))
        {
            showToast = value == "true";
            if (showToast)
            {
                Task.Delay(3000).ContinueWith(_ => 
                {
                    showToast = false;
                    InvokeAsync(StateHasChanged);
                });
            }
        }
    }

    private async Task LoadBooks()
    {
        var allBooks = await BookService.GetAllBooksAsync();
        var query = allBooks.AsEnumerable();

        if (!string.IsNullOrWhiteSpace(searchTerm))
        {
            query = query.Where(b => b.Title.Contains(searchTerm, StringComparison.OrdinalIgnoreCase));
        }

        if (showFavoritesOnly)
        {
            query = query.Where(b => b.IsFavorite);
        }

        query = currentSort switch
        {
            "title-asc" => query.OrderBy(b => b.Title),
            "title-desc" => query.OrderByDescending(b => b.Title),
            "date-newest" => query.OrderByDescending(b => b.PublishedDate),
            "date-oldest" => query.OrderBy(b => b.PublishedDate),
            _ => query.OrderBy(b => b.Title)
        };

        var filteredList = query.ToList();
        totalPages = (int)Math.Ceiling(filteredList.Count / (double)pageSize);
        
        if (currentPage > totalPages && totalPages > 0) currentPage = totalPages;
        if (currentPage < 1) currentPage = 1;

        books = filteredList.Skip((currentPage - 1) * pageSize).Take(pageSize).ToList();
    }

    private async Task HandleSearch()
    {
        currentPage = 1;
        await LoadBooks();
    }

    private async Task ToggleFavoritesFilter()
    {
        showFavoritesOnly = !showFavoritesOnly;
        currentPage = 1;
        await LoadBooks();
    }

    private async Task ToggleFavorite(int id)
    {
        await BookService.ToggleFavoriteAsync(id);
        await LoadBooks();
    }

    private async Task ChangePage(int page)
    {
        if (page >= 1 && page <= totalPages)
        {
            currentPage = page;
            await LoadBooks();
        }
    }

    private async Task OnSortChanged(ChangeEventArgs e)
    {
        currentSort = e.Value?.ToString() ?? "title-asc";
        await LoadBooks();
    }

    private void AddNewBook()
    {
        NavigationManager.NavigateTo("/books/edit");
    }

    private void ViewBook(int id)
    {
        NavigationManager.NavigateTo($"/books/details/{id}");
    }

    private void EditBook(int id)
    {
        NavigationManager.NavigateTo($"/books/edit/{id}");
    }

    private async Task DeleteBook(int id)
    {
        var confirmed = await JSRuntime.InvokeAsync<bool>("confirm", "Are you sure you want to delete this book?");
        if (confirmed)
        {
            await BookService.DeleteBookAsync(id);
            await LoadBooks();
        }
    }
}
