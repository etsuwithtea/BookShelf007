@page "/books"
@using BookShelf007.Models
@using BookShelf007.Services
@using Microsoft.AspNetCore.WebUtilities
@inject IBookService BookService
@inject NavigationManager NavigationManager
@rendermode InteractiveServer

<PageTitle>Bookshelf</PageTitle>

<style>
    .book-card {
        transition: transform 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275), box-shadow 0.3s ease;
        border: none;
        border-radius: 15px;
        overflow: hidden;
        background: #fff;
    }
    .book-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 15px 30px rgba(0,0,0,0.15) !important;
    }
    .img-wrapper {
        width: 100%;
        height: 280px;
        overflow: hidden;
        position: relative;
    }
    .card-img-top {
        width: 100%;
        height: 100%;
        object-fit: cover; /* ทำให้รูปเต็มพื้นที่ */
        transition: transform 0.5s ease;
    }
    .book-card:hover .card-img-top {
        transform: scale(1.1); /* ซูมรูปเล็กน้อยเวลา hover */
    }
    .card-title-prominent {
        font-size: 1.15rem;
        font-weight: 800;
        color: #2d3436;
        line-height: 1.3;
        margin-bottom: 0.5rem;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
        height: 3rem;
    }
    .card-body {
        padding: 1.25rem;
    }
</style>

<div class="container mt-2 mt-md-4 position-relative">
    <div class="d-flex justify-content-between align-items-center mb-3 mb-md-4">
        <h1>My Book Collection</h1>
        <button class="btn btn-outline-primary" @onclick="AddNewBook">
            <i class="bi bi-plus-lg"></i> Add New Book
        </button>
    </div>

    @if (showToast)
    {
        <div class="toast-container position-fixed bottom-0 end-0 p-3">
            <div class="toast show align-items-center text-white bg-success border-0" role="alert" aria-live="assertive" aria-atomic="true">
                <div class="d-flex">
                    <div class="toast-body">
                        Book saved successfully!
                    </div>
                    <button type="button" class="btn-close btn-close-white me-2 m-auto" @onclick="() => showToast = false" aria-label="Close"></button>
                </div>
            </div>
        </div>
    }

    @if (books == null)
    {
        <p><em>Loading...</em></p>
    }
    else if (!books.Any())
    {
        <div class="alert alert-info">No books found. Start by adding one!</div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-4 g-4">
            @foreach (var book in books)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm book-card">
                        <div @onclick="() => ViewBook(book.Id)" style="cursor: pointer;">
                            <div class="img-wrapper">
                                <img src="@(string.IsNullOrEmpty(book.ImageUrl) ? "/images/Books/default.png" : book.ImageUrl)" 
                                     class="card-img-top" alt="@book.Title">
                            </div>
                            <div class="card-body">
                                <h5 class="card-title-prominent fs-4">@book.Title</h5>
                                <p class="card-text text-muted mb-2" style="font-size: 0.9rem;">
                                    <i class="bi bi-person-fill text-primary"></i> @book.Author
                                </p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <span class="badge rounded-pill bg-light text-dark border">
                                        <i class="bi bi-calendar3"></i> @book.PublishedDate.Year
                                    </span>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer bg-white border-0 pb-3 d-flex justify-content-center gap-2">
                            <button class="btn btn-sm btn-dark" title="View" @onclick="() => ViewBook(book.Id)">
                                <i class="bi bi-eye"></i> <span class="d-none d-md-inline">View</span>
                            </button>
                            <button class="btn btn-sm btn-outline-warning" title="Edit" @onclick="() => EditBook(book.Id)">
                                <i class="bi bi-pencil"></i> <span class="d-none d-md-inline">Edit</span>
                            </button>
                            <button class="btn btn-sm btn-outline-danger" title="Delete" @onclick="() => DeleteBook(book.Id)">
                                <i class="bi bi-trash"></i> <span class="d-none d-md-inline">Delete</span>
                            </button>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@code {
    [Inject] private IJSRuntime JSRuntime { get; set; } = default!;
    private List<Book>? books;
    private bool showToast = false;

    protected override void OnInitialized()
    {
        LoadBooks();
        CheckForToast();
    }

    private void CheckForToast()
    {
        var uri = NavigationManager.ToAbsoluteUri(NavigationManager.Uri);
        if (Microsoft.AspNetCore.WebUtilities.QueryHelpers.ParseQuery(uri.Query).TryGetValue("saved", out var value))
        {
            showToast = value == "true";
            if (showToast)
            {
                // Auto-hide toast after 3 seconds
                Task.Delay(3000).ContinueWith(_ => 
                {
                    showToast = false;
                    InvokeAsync(StateHasChanged);
                });
            }
        }
    }

    private void LoadBooks()
    {
        books = BookService.GetAllBooks();
    }

    private void AddNewBook()
    {
        NavigationManager.NavigateTo("/books/edit");
    }

    private void ViewBook(int id)
    {
        NavigationManager.NavigateTo($"/books/details/{id}");
    }

    private void EditBook(int id)
    {
        NavigationManager.NavigateTo($"/books/edit/{id}");
    }

    private async Task DeleteBook(int id)
    {
        var confirmed = await JSRuntime.InvokeAsync<bool>("confirm", "Are you sure you want to delete this book?");
        if (confirmed)
        {
            BookService.DeleteBook(id);
            LoadBooks();
        }
    }
}
