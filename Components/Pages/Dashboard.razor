@page "/dashboard"
@using BookShelf007.Models
@using BookShelf007.Services
@inject IBookService BookService
@inject NavigationManager NavigationManager
@rendermode InteractiveServer

<PageTitle>Dashboard - BookShelf007</PageTitle>

<div class="container mt-4">
    <h1 class="mb-4">Dashboard</h1>

    @if (stats == null)
    {
        <p><em>Loading stats...</em></p>
    }
    else
    {
        <div class="row g-4 mb-5">
            <div class="col-md-4">
                <div class="card border-0 shadow-sm bg-primary text-white h-100">
                    <div class="card-body d-flex flex-column justify-content-center align-items-center py-4">
                        <i class="bi bi-bookshelf fs-1 mb-2"></i>
                        <h2 class="display-4 fw-bold">@stats.TotalBooks</h2>
                        <p class="mb-0">Total Books</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border-0 shadow-sm bg-danger text-white h-100">
                    <div class="card-body d-flex flex-column justify-content-center align-items-center py-4">
                        <i class="bi bi-heart-fill fs-1 mb-2"></i>
                        <h2 class="display-4 fw-bold">@stats.FavoriteBooks</h2>
                        <p class="mb-0">Favorites</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border-0 shadow-sm bg-success text-white h-100">
                    <div class="card-body d-flex flex-column justify-content-center align-items-center py-4">
                        <i class="bi bi-calendar-check fs-1 mb-2"></i>
                        <h2 class="display-4 fw-bold">@(stats.RecentBooks.Count)</h2>
                        <p class="mb-0">Recently Added</p>
                    </div>
                </div>
            </div>
        </div>

        <h3 class="mb-3">Recently Added Books</h3>
        @if (!stats.RecentBooks.Any())
        {
            <div class="alert alert-info">No books added yet.</div>
        }
        else
        {
            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-5 g-3">
                @foreach (var book in stats.RecentBooks)
                {
                    <div class="col">
                        <div class="card h-100 shadow-sm border-0" @onclick="() => ViewBook(book.Id)" style="cursor: pointer;">
                            <img src="@(string.IsNullOrEmpty(book.ImageUrl) ? "/images/Books/default.png" : book.ImageUrl)" 
                                 class="card-img-top" alt="@book.Title" style="height: 150px; object-fit: cover;">
                            <div class="card-body p-2 text-center">
                                <h6 class="card-title text-truncate mb-0">@book.Title</h6>
                                <small class="text-muted">@book.Author</small>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    }
</div>

@code {
    private BookStatistics? stats;

    protected override async Task OnInitializedAsync()
    {
        stats = await BookService.GetStatisticsAsync();
    }

    private void ViewBook(int id)
    {
        NavigationManager.NavigateTo($"/books/details/{id}");
    }
}
